<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LearningOrAssessment"
    android:id="@+id/rootLayout"
    >

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_layout" />

    <Button
        android:id="@+id/gotoLearningActivity_button"
        android:layout_width="251dp"
        android:layout_height="86dp"
        android:layout_marginTop="132dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="gotoLearning"
        android:text="Learning"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <Button
        android:id="@+id/gotoAssessmentActivity_button"
        android:layout_width="251dp"
        android:layout_height="86dp"
        android:layout_marginTop="84dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="gotoAssessment"
        android:text="Assessment"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoLearningActivity_button" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="156dp"
        android:layout_height="79dp"
        android:layout_marginTop="116dp"
        android:backgroundTint="#00FFFFFF"
        android:onClick="logout"
        android:text="Logout"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gotoAssessmentActivity_button" />
</androidx.constraintlayout.widget.ConstraintLayout>